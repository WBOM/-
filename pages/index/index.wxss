/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  top: -100rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto;
  border-radius: 50%;
}
.userinfo-nickname {
  float: left;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgb(48, 48, 48);
}
.MyMessage{
  margin-top: -20rpx;
  align-items: center;
}
.MyMessageList{
  display:block;
  align-items: center;
  float: left;
  width: auto;
  height: 30rpx;
  font-size:30rpx;
  line-height: 30rpx;
  margin: 0 50rpx;
  padding: 0 2rpx 18rpx 2rpx;
  cursor: pointer;
  color: #747474;
}
.MyMessageList.active{
  font-size: 30rpx;
  color: #000000;
  border-bottom: 4rpx #000 solid;
}
.MyData{
   background: rgb(243, 243, 243);
}
.icon-line{
  margin-top: 10rpx;
  background: #fff;
  display:block;
  width: 100%;
  height: 100rpx;
}
.icon1,.icon2,.icon3,.icon4{
  display: block;
  width: 187.5rpx;
  height: 100rpx;
  float: left;
  box-sizing: border-box;
  cursor: pointer;

}
.icon-line image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  position: relative;
  left: 50%;
  top: 40%;
  margin-left: -25rpx;
  margin-top: -25rpx;
}
.icon-line text{
  display: block;
  font-size: 20rpx;
  margin: 0 auto;
  text-align: center;
  position: relative;
  top: 43rpx;
}
.MySteam{
  position: relative;
  left: 0;
  top:0; 
  margin: 10rpx auto 0;
  background-image: url(http://i2.bvimg.com/672274/a97fab5c92545450.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0 -130rpx;
  display:block;
  width: 99%;
  height: 160rpx;
  border-radius: 5rpx;
  z-index: 1;
}
.MySteam::after{
  display: block;
  content: '';
  width: 100%;
  height: 160rpx;
  background: rgba(27, 40, 56, 0.85);
  position: relative;
  left: 0;
  top: 0;
  z-index: 2;
}
.MySteamInformation{
  padding: 15rpx 20rpx;
  position: absolute;
  width: 100%;
  height: 50rpx;
  z-index: 3;
}
.MySteamInformation .headportrait{
  float: left;
  width: 40rpx;
  height: 40rpx;
  border-radius: 3rpx;
}
.MySteamInformation text{
  margin: 0 10rpx;
  float: left;
  height: 40rpx;
  font-size: 18rpx;
  line-height: 40rpx;
  color: #fff;
}
.MySteamInformation .stam{
  float: left;
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 3rpx;
  margin: 7.5rpx;
}
.MySteamInformation .state{
  font-size: 14rpx;
  display: block;
  float: left;
  color:rgb(15, 138, 218);
}
.MySteamInformation .setup{
  float: right;
  width: 35rpx;
  height: 35rpx;
  margin:0 40rpx;
}
.gameinformation{
  position: absolute;
  top: 80rpx;
  width: 100%;
  height: 65rpx;
  background: rgba(0, 0, 0, 0.1);
  z-index: 3;
}
.gameinformation view{
  float: left;
  font-size: 28rpx;
  margin: 5rpx 50rpx 0 10rpx;
  font-weight: 300;
  color: #fff;
}
.gameprice,gamenumber,gametime{
  display: block; 
}
.gamepricetext,.gamenumbertext,.gametimetext{
  display: block;
  font-size: 15rpx;
  text-align: center;
}
.gameshow{
  width: 99%;
  margin: 10rpx auto 0;
  height: 90rpx;
  background:linear-gradient(to right,rgb(70,75,79),rgb(20,25,28));
}
.gameshow image{
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
}
.gameshow .gamename{
  float: left;
  color: #fff;
  font-size: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 10rpx;
}
.gameshow .close{
  height: 90rpx;
  line-height: 90rpx;
  color: #747474;
  font-size: 20rpx;
  float: right;
  margin-right: 80rpx;
}
